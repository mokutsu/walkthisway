<h1>Sign Up!</h1>

<%= form_for @user do |f| %>
<div>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</div>

<div>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
</div>

<div>
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>

<!-- <div>to be replaced with an upload field for user icon</div> -->

<div>
  <%= f.label :details %>
  <%= f.text_area :details, :maxlength =>'256', :size => '30x10'%>
</div>

<div>
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>

<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
</div>

  <%= f.submit 'Save' %>

<% end %>
