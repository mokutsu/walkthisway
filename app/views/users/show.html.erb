<div class = 'profile-container'>


  <div>

    <img src ="<%= @user.icon %>">
  </div>

  <% if current_user == @user %>
  <div class = 'userlinks'>
    <ul class = 'userlink_list'>
      <li><h1 class = 'username-show'><%= @user.first_name %> <%= @user.last_name %> </h1></li>
      <li><%= link_to "Edit Profile", edit_user_url %> </li>
      <li><%= link_to "Walks You've Created", user_walks_url(current_user) %></li>

    </ul>
    </div>
  <% end %>

  <% if current_user.has_linked_twitter? %>
    <%= link_to 'Unlink your Twitter account', delete_oauth_path('twitter'), method: :delete %>
  <% else %>
    <%= link_to 'Link your Twitter account', auth_at_provider_path(:provider => :twitter) %>
  <% end %>

</div>
