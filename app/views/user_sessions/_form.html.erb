
<%= form_tag user_sessions_path, :method => :post do %>
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>
        <%= label_tag :email, "Email" %>
      </td>
      <td>
        <%= text_field_tag :email %>
      </td>
    </tr>

    <tr>
      <td>
        <%= label_tag :password, "Password" %>
      </td>
      <td>
        <%= password_field_tag :password %>
      </td>
    </tr>

    <tr>
      <td>
        <%= submit_tag "Login" , :class=>'btn_submit' %>
      </td>
      <td>
      </td>
    </tr>

  </tbody>
</table>

<% end %>
