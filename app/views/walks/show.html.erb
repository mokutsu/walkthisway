<div class="walk_image">
<img src="<%=@walk.picture%>" >
<style>
.walk_image {
  width: 100%;
  height:250px;
  background-image: url('<%=@walk.picture%>');
}
</style>
<!-- <img src="http://imgh.us/Toronto_skyline_small.jpg"> -->
</div>

<div class="page-wrapper">

<div class= "walk_show_left">
<div class="walk_name">
  <%= @walk.name %>
    <%=@walk.city%>
</div>


  <h2>About This Walk</h2>
  <p class="walk_show_description"><%=@walk.description%></p>


<h2> Walk Route</h2>
<div class="waypoints_form">
  <p> Waypoints on this route: </p>
  <% @walk.waypoints.each do |waypoint| %>
  <% i = 1 %>
   <%= "Stop #{i}: "%> <%= waypoint.address %>
    <!-- <%#= waypoint.description %> -->
  <% i+= 1%> <br>
  <% end %>

  <div id='directions-panel'>Directions</div>
</div>

</div><!-- end of walk_show_left-->

<div class="walk_show_right">
<div id="map_walk-show" class="map" data-latitude="<%= @centershow[0] %>" data-longitude="<%= @centershow[1] %>"></div>
</div>
</div>
